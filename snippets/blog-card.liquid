<div class="article-card">
  <a href="{{article.url}}">
    {% render 'image', class: 'media media--square', mobileSrc: article.image, desktopSrc: article.image %}

    <div>
      <p>
        <span class="article-card__date">{{ article.published_at | date: '%B %d, %Y' }}</span>
      </p>
    </div>
  </a>

  <div class="article-card__content">
    <h3 class="article-card__title article-color">{{ article.title }}</h3>
    <p class="article-card__paragraph article-color">{{ article.excerpt_or_content | truncate: 100, '...' }}</p>
    <a href="{{article.url}}" class="button button--primary article-card__button">Read More</a>
  </div>
</div>