{% if section.settings.blog.articles.size > 0 %}
  <h2 class="blogpost_heading-{{section.id}}">Featured Blogs</h2>
  <div class="blogpost-container container">
    <div class="blogpost-content flex">
      {% for article in section.settings.blog.articles limit: 4 %}
        <div>
          {% render 'blog-card', article: article %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% style %}
  .blogpost_heading-{{ section.id}}{
    color: {{ section.settings.heading_text_color}}
    ;
    text-align: {{ section.settings.heading_position}}
    ;
  }
{% endstyle %}


{% schema %}
  {
    "name": "Blogpost Section",
    "class": "homepage section",
    "tag": "section",
    "settings": [
      {
        "type": "blog",
        "id": "blog",
        "label": "Choose a Blog"
      }, {
        "type": "color",
        "id": "heading_text_color",
        "label": "Heading Color",
        "default": "#000"
      }, {
        "type": "select",
        "id": "heading_position",
        "label": "Heading position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }
    ],
    "presets": [
      {
        "name": "Blogpost Section"
      }
    ]
  }
{% endschema %}