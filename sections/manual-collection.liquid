{% if section.settings.collection_id != blank %}
  <div class="Manual-collection">
    <div class="">
      {% assign product_limit = section.settings.product_limit %}
      {% for product in section.settings.collection_id.products %}
        <div class="grid__item Manual-collection__content mt-1 flex justify-between">
          <div class="Manual-collection__card">
            {% render 'my-product-card', product: product %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Manual Collection",
    "class": "Manual-Collection",
    "tag": "section",
    "settings": [
      {
        "type": "collection",
        "id": "collection_id",
        "label": "Collection"
      }, {
        "type": "range",
        "id": "product_limit",
        "min": 1,
        "max": 20,
        "step": 1,
        "label": "Product Limit",
        "default": 4
      }
    ],
    "presets": [
      {
        "name": "Manual Collection"
      }
    ]
  }
{% endschema %}